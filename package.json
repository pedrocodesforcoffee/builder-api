{
  "name": "builder-api",
  "version": "0.1.0",
  "description": "Construction management API for Bob the Builder platform",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:unit": "jest --config=jest.unit.config.js",
    "test:integration": "jest --config=jest.integration.config.js --runInBand",
    "test:e2e": "jest --config=jest.e2e.config.js --runInBand",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:watch:unit": "jest --config=jest.unit.config.js --watch",
    "test:cov": "jest --coverage",
    "test:cov:unit": "jest --config=jest.unit.config.js --coverage",
    "test:cov:integration": "jest --config=jest.integration.config.js --coverage --runInBand",
    "test:cov:e2e": "jest --config=jest.e2e.config.js --coverage --runInBand",
    "test:ci": "jest --coverage --ci --maxWorkers=2",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:staged": "jest --bail --findRelatedTests",
    "test:clear": "jest --clearCache",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run build && typeorm-ts-node-commonjs migration:generate -d ./dist/ormconfig.js",
    "migration:create": "typeorm-ts-node-commonjs migration:create",
    "migration:run": "npm run build && typeorm-ts-node-commonjs migration:run -d ./dist/ormconfig.js",
    "migration:revert": "npm run build && typeorm-ts-node-commonjs migration:revert -d ./dist/ormconfig.js",
    "migration:show": "npm run build && typeorm-ts-node-commonjs migration:show -d ./dist/ormconfig.js"
  },
  "keywords": [
    "construction",
    "api",
    "management"
  ],
  "author": "Bob the Builder Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bobthebuilder/builder-api.git"
  },
  "bugs": {
    "url": "https://github.com/bobthebuilder/builder-api/issues"
  },
  "homepage": "https://github.com/bobthebuilder/builder-api#readme",
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.8",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.8",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/passport-jwt": "^4.0.1",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.3",
    "nestjs-pino": "^4.4.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@golevelup/ts-jest": "^0.7.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.8",
    "@testcontainers/postgresql": "^11.8.0",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-extended": "^7.0.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^4.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "pg-mem": "^3.0.5",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
